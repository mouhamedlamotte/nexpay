model Project {
  id   String @id @default(cuid())
  name String @unique

  isDefault Boolean @default(false)


  description String?

  metadata     Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  webhooks  Webhook[]
  callback Callback?

  transactions Transaction[]
  sessions Session[]

  @@map("projects")
}

model Webhook {
  id        String   @id @default(cuid())
  url       String
  description String?
  secret    String?
  header    String?
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  events    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([projectId, url])
  @@map("webhooks")
}

model Callback {
  id        String   @id @default(cuid())
  successUrl String?
  failureUrl String?
  projectId String @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("callbacks")
}